{
  "main": {
    "tag": "div",
    "class": "bugs-overview"
  },
  "header": {
    "tag": "div",
    "class": "header",
    "inner": [
      {
        "tag": "div",
        "class": "bug-id-header",
        "inner": "%bugIdTitle%"
      },
      {
        "tag": "div",
        "class": "priority-header",
        "inner": "%priorityTitle%"
      },
      {
        "tag": "div",
        "class": "name-header",
        "inner": "%nameTitle%"
      },
      {
        "tag": "div",
        "class": "current-status-header no-order",
        "inner": [
            "%statusTitle%",
            {
                "tag"   : "i",
                "id"    : "status-mark",
                "class" : "fa fa-sort-down"
            }
        ]
      },
      {
        "tag": "div",
        "class": "subscriber-header",
        "inner": "%subscriberTitle%"
      },
      {
        "tag": "div",
        "class": "description-header",
        "inner": "%descriptionTitle%"
      }
    ]
  },
  "bug": {
    "tag": "div",
    "class": "bug",
    "inner": [
      {
        "tag": "div",
        "class": "bug-id",
        "inner": "%bugId%"
      },
      {
        "tag": "div",
        "class": "priority",
        "inner": "%priority%"
      },
      {
        "tag": "div",
        "class": "name",
        "inner": "%name%"
      },
      {
        "tag": "div",
        "class": "current-status",
        "inner": "%status%"
      },
      {
        "tag": "div",
        "class": "subscriber",
        "inner": "%subscriber%"
      },
      {
        "tag": "div",
        "class": "description",
        "inner": "%description%"
      },
      {
        "tag": "div",
        "class": "bug-buttons",
        "inner": [
          {
            "tag": "i",
            "class": "fa fa-edit"
          },
          {
            "tag": "i",
            "class": "fa fa-remove"
          }
        ]
      }
    ]
  },
  "bug-edit": {
    "tag": "div",
    "class": "bug bug-edit",
    "inner": [
      {
        "tag": "div",
        "class": "bug-id",
        "inner": "%bugId%"
      },
      {
        "tag": "div",
        "class": "priority",
        "inner": "%priority%"
      },
      {
        "tag": "div",
        "class": "name",
        "inner": "%name%"
      },
      {
        "tag": "div",
        "class": "current-status",
        "inner": {
          "tag": "select",
          "id": "states",
          "inner": [
            {
              "tag": "option",
              "value": "open",
              "inner": "open"
            },
            {
              "tag": "option",
              "value": "pending",
              "inner": "pending"
            },
            {
              "tag": "option",
              "value": "closed",
              "inner": "closed"
            }
          ]
        }
      },
      {
        "tag": "div",
        "class": "subscriber",
        "inner": "%subscriber%"
      },
      {
        "tag": "div",
        "class": "description",
        "inner": {
            "tag"   : "textarea",
            "rows"  : 4,
            "id"    : "description-text",
            "inner" : "%description%"
        }
      },
      {
        "tag": "div",
        "class": "bug-buttons",
        "inner": [
          {
            "tag": "i",
            "class": "fa fa-check"
          },
          {
            "tag": "i",
            "class": "fa fa-trash"
          }
        ]
      }
    ]
  }
}
